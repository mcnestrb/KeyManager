<% if @groups.count == 0 %>
    <p>There are no groups</p>
<% else %>
    <ul>
        <% @groups.each do |group| %>
            <li><%= link_to group.name, admin_group_path(group) %></li>
        <% end %>
    </ul>
<% end %>

<%= form_for :group, url: new_group_path do |f| %>
    <p>
        <%= f.label :name %><br>
        <%= f.text_field :name %>
    </p>

    <p>
        <%= f.submit %>
    </p>
<% end %>
